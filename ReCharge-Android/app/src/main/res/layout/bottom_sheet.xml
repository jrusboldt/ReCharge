<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:clipToPadding="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/tap_action_layout"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_dns_red_400_24dp"/>

            <TextView
                    android:id="@+id/bottom_sheet_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap to see quick actions"
                    android:textColor="@color/colorGrey"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="4dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATION INFORMATION"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/bottom_sheet_address"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: "
                        android:textStyle="normal"/>

                <TextView
                        android:id="@+id/bottom_sheet_distance"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance to Station: "
                        android:textStyle="normal"/>

                <LinearLayout
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/bottom_sheet_charging_availability"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Charging Availability: "
                                android:textStyle="normal"/>

                        <TextView
                                android:id="@+id/bottom_sheet_parking_availability"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parking Availability: "
                                android:textStyle="normal"/>

                        <TextView
                                android:id="@+id/bottom_sheet_public_status"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Public Access: "
                                android:textStyle="normal"/>

                        <TextView
                                android:id="@+id/bottom_sheet_cost_status"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cost Status: "
                                android:textStyle="normal"/>

                        <TextView
                                android:id="@+id/bottom_sheet_charging_levels"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Charging Levels: "
                                android:textStyle="normal"/>

                        <TextView
                                android:id="@+id/bottom_sheet_station_id"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Station ID: "
                                android:textStyle="normal"/>

                        <TextView
                                android:id="@+id/bottom_sheet_working_status"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Working Status: "
                                android:textStyle="normal"/>

                        <TextView
                                android:id="@+id/bottom_sheet_expected_date"
                                android:textColor="@android:color/black"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Expected Working Date: "
                                android:textStyle="normal"
                                android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="4dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OPEN IN GOOGLE MAPS"
                        android:textStyle="bold"/>

                <LinearLayout
                        android:padding="15dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <!--
                        <RelativeLayout
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:background="@drawable/circleshape"
                                android:layout_width="60dp"
                                android:layout_height="60dp">

                            <ImageView
                                    android:src="@drawable/ic_place_white_24dp"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"/>

                        </RelativeLayout>

                        <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:text="Locate"/>
                        -->

                        <android.support.design.widget.FloatingActionButton
                                android:id="@+id/bottom_sheet_button_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:scaleType="center"
                                android:src="@drawable/ic_place_white_24dp"
                                android:layout_margin="10dp"/>

                        <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:text="Locate"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <android.support.design.widget.FloatingActionButton
                                android:id="@+id/bottom_sheet_button_directions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:scaleType="center"
                                android:src="@drawable/ic_directions_white_24dp"
                                android:layout_margin="10dp"/>

                        <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:text="Directions"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
